<block wx:if="{{loadModal}}">
  <view class='cu-load load-modal'>
    <!-- <view class='icon-emojifill text-orange'></view> -->
    <image src='/images/logo.png' class='png' mode='aspectFit'></image>
    <view class='gray-text'>加载中...</view>
  </view>
</block>
<block wx:else>
  <view class="cu-custom" style="height:{{CustomBar}}px;">
    <view class="cu-bar fixed bg-gradual-pink" style="height:{{CustomBar}}px;padding-top:{{StatusBar}}px;">
      <navigator class='action' open-type="navigateBack" delta="1" hover-class="none">
        <text class='icon-back'></text> 轮播图
      </navigator>
    </view>
  </view>
  <view class="container">
    <view class="nav_left">
      <block wx:for="{{navLeftItems}}" wx:key="{{index}}">
        <view class="nav_left_items {{curNav == item.desc ? 'active' : ''}}" bindtap="switchRightTab" data-index="{{index}}" data-id="{{item.type}}">{{item.typeName}}</view>
      </block>
    </view>
    <view class="nav_right">
      <view wx:if="{{navRightItems}}">
        <block wx:for="{{navRightItems}}" wx:key="{{index}}">
          <view wx:if="{{item.classify == curNav}}">
            <view class="nav_right_items">
              <navigator url="../details/details?id={{item.id}}">
                <view>
                  <block wx:if="{{item.pic}}">
                    <image src="{{item.pic}}"></image>
                  </block>
                  <block wx:else>
                    <image src="http://temp.im/50x30"></image>
                  </block>
                </view>
                <view wx:if="{{item.desc}}">
                  <text space="ensp">{{item.desc}} ¥:{{item.price}}</text>
                </view>
                <view wx:else>
                  <text space="ensp">{{item.title}} ¥:{{item.price}}</text>
                </view>
              </navigator>
            </view>
          </view>
        </block>
      </view>
      <view wx:else>暂无数据</view>
    </view>
  </view>
</block>