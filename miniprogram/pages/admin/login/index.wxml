<view class="cu-custom" style="height:{{CustomBar}}px;">
  <view class="cu-bar fixed bg-gradual-pink" style="height:{{CustomBar}}px;padding-top:{{StatusBar}}px;">
    <navigator class='action' open-type="navigateBack" delta="1" hover-class="none">
      <text class='icon-back'></text> 登录
    </navigator>
  </view>
</view>
<image src='/images/logo.png' class='logo_png' mode='aspectFit'></image>
<view class="cu-form-group margin-top">
  <view class='title'>账户：</view>
  <input placeholder="请输入登录账户" class='radius' name='{{form.phoneId}}' type='number' bindinput='inputName'></input>
</view>
<view class="cu-form-group">
  <view class='title'>密码：</view>
  <input placeholder="请输入登录密码" class='radius' name='{{form.password}}' password='true' bindinput='inputPassword'></input>
</view>
<view class="padding flex flex-direction cu-form-group">
  <button class='cu-btn bg-red margin-tb-sm lg' style='width:100%;' bindtap='handleLogin'>登录</button>
  <button class='cu-btn bg-grey lg' style='width:100%;' bindtap='handleRegister'>注册</button>
</view>